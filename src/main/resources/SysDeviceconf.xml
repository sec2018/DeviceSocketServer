<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="SysDeviceconf">
    <select id="selectSysDeviceconf" parameterType="String" resultType="SysDeviceconf">
        SELECT * FROM sys_deviceconf WHERE mid = #{mid}
    </select>

    <update id="updateDeviceconfByMid" parameterType="Map">
        update sys_deviceconf
        set uimodifyflag = 0 AND
        hardmodifyflag = 0 AND
        updatetime = #{updatetime}
        where mid = #{mid}
    </update>

    <select id="getAllDeviceConfModifiedRecord" resultType="SysDeviceconf">
        select * from sys_deviceconf
        where uimodifyflag = 1 AND
        hardmodifyflag = 0
    </select>
</mapper>